<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.animepage.AnimeScreen">

    <include
        android:id="@+id/appbar_anime"
        layout="@layout/appbar_anime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_anime">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/violet_shade"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/violet_shade"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/anime_card_background">

                        <ImageView
                            android:id="@+id/mainCharacterImage"
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anime_poster"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/anime_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Anime Title"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/anime_title_japanese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Anime Title Japanese"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewAbout"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_rectangle_border"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/scoreDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Score : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/scoreText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="9.14"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/rankedDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Ranked : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/rankedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/episodesDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Episodes : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/episodesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="64"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/statusDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Status : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/statusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Finished Airing"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/typeDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Type : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/typeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TV"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sourceDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Source : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/sourceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Manga"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/airedDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Aired : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/airedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sep 29, 2023 to Mar 22, 2024"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ratingDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Rating : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/ratingText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="PG-13 - Teens 13 or older"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/durationDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Duration : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/durationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="24 min per ep"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/genresDefault"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Genres : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/genresText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Adventure Drama Fantasy"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/rounded_top_corners_black_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:text="Summary"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/summary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp"
                    android:text="During their decade-long quest to defeat the Demon King, the members of the hero's party—Himmel himself, the priest Heiter, the dwarf warrior Eisen, and the elven mage Frieren—forge bonds through adventures and battles, creating unforgettable precious memories for most of them.\n\nHowever, the time that Frieren spends with her comrades is equivalent to merely a fraction of her life, which has lasted over a thousand years. When the party disbands after their victory, Frieren casually returns to her \&quot;usual\&quot; routine of collecting spells across the continent. Due to her different sense of time, she seemingly holds no strong feelings toward the experiences she went through.\n\nAs the years pass, Frieren gradually realizes how her days in the hero's party truly impacted her. Witnessing the deaths of two of her former companions, Frieren begins to regret having taken their presence for granted; she vows to better understand humans and create real personal connections. Although the story of that once memorable journey has long ended, a new tale is about to begin.\n\n[Written by MAL Rewrite]"
                    android:textColor="@color/white" />

                <VideoView
                    android:id="@+id/animeVideoPlayback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_rectangle_border"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/anime_title_englishDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="English : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/anime_title_englishText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Frieren: Beyond Journey's End"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/seasonDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Season : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/seasonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="fall"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/yearDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Year : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/yearText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2023"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/producersDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Producers : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/producerText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Aniplex Dentsu Shogakukan-Shueisha Productions Nippon Television Network TOHO animation Shogakukan"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lisensorsDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Lisensors : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/lisensorText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/studioDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Studio : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/studioText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Madhouse"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/demographDefault"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Demograph : "
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/demographText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shounen"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/relation_adaptation"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Adaptation"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/relation_adaptation_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kono Subarashii Sekai ni Shukufuku wo"
                            android:textColor="@color/violet" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/relation_prequel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Prequel"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/relation_prequel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Kono Subarashii Sekai ni Shukufuku wo! Movie: Kurenai Densetsu"
                            android:textColor="@color/violet" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/relation_other"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Other"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/relation_other_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:textColor="@color/violet" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Opening Theme"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:id="@+id/opening"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Growing Up by Machico (eps 2-5,7-10)"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:text="Ending Theme"
                        android:textColor="@color/grey" />

                    <LinearLayout
                        android:id="@+id/ending"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1: Growing Up by Machico (eps 1,11)"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView3"
        app:maxImageSize="40dp"
        app:srcCompat="@drawable/playlist" />

</androidx.constraintlayout.widget.ConstraintLayout>