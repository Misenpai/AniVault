<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.home.AddingAnimeDatabase">

    <include
        android:id="@+id/appbar_anime"
        layout="@layout/appbar_anime" />

    <TextView
        android:id="@+id/anime_name_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="20dp"
        android:text="Anime_name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/anime_status_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatching"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Watching"
                android:textSize="10sp"
                app:iconPadding="0dp"
                android:backgroundTint="@color/button_background_selector"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompleted"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Completed"
                android:textSize="10sp"
                android:backgroundTint="@color/button_background_selector"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlanToWatch"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Plan to Watch"
                android:textSize="10sp"
                android:backgroundTint="@color/button_background_selector"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDropped"
                style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:text="Dropped"
                android:textSize="10sp"
                android:backgroundTint="@color/button_background_selector"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Progress"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/progress_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progressRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <View
            android:id="@+id/selectionBox"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/selection_box_background" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Widget.App.Button.OutlinedButtonSave.IconOnly"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Save"
        android:textSize="16sp" />

</LinearLayout>